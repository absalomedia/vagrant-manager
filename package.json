{
  "name": "vagrant-manager",
  "productName": "Vagrant Manager",
  "companyName": "Absalom Media",
  "version": "1.2.0",
  "description": "Manage your vagrant machines in one place with Vagrant Manager",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV='development' npm run start",
    "start": "electron index.js",
    "build-mac": "build -m",
    "build-win": "build -w",
    "build-linux": "build -l",
    "build" : "build -ml",	
    "postinstall": "install-app-deps",
    "dist": "npm run build && build --publish onTagOrDraft", 
    "dist:win": "npm run build-win && build --publish onTagOrDraft"
  },
  "build": {
    "files": [
      "dist/",
      "node_modules/",
	  "assets/",
	  "index.js",
	  "about.html",
	  "package.json"
    ],
    "appId": "com.electron.vagrant-manager",
    "category": "public.app-category.developer-tools",
    "dmg": {
      "title": "Vagrant Manager",
      "icon": "build/icon.icns",
      "iconSize": 128,
      "prune": "true",
      "contents": [
        {
          "x": 355,
          "y": 125,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 155,
          "y": 125,
          "type": "file"
        }
      ]
    },
    "win": {
      "prune": "true",
      "icon": "build/icon.ico"
    },
    "linux": {
      "prune": "true",
      "icon": "build/icons/512x512.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "directories": {
    "output": "release"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/absalomedia/vagrant-manager"
  },
  "bugs": {
    "url": "https:/github.com/absalomedia/vagrant-manager/issues"
  },
  "homepage": "https:/github.com/absalomedia/vagrant-manager#readme",
  "keywords": [
    "Vagrant",
    "Manager"
  ],
  "author": "Lawrence Meckan",
  "contributors": [
    "Andrii Kostetskyi <kostyandrew@gmail.com>",
    "Vaibhav Sidapara <vaibhav.sidapara@gmail.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "electron-gh-releases": "^2.0.4",
    "jquery": "^3.1.1",
    "shell-path": "^2.1.0",
    "shelljs": "^0.7.4"
  },
  "devDependencies": {
    "electron": "^1.7.1",
    "electron-builder": "next",
  }
}
