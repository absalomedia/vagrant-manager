{
  "name": "vagrant-manager",
  "productName": "Vagrant Manager",
  "companyName": "Absalom Media",
  "version": "1.2.0",
  "description": "Manage your vagrant machines in one place with Vagrant Manager",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV='development' npm run start",
    "start": "rm -rf .cache && cross-env NODE_ENV=development electron .",
    "clean-cache": "rm -rf .cache",
    "clean-source": "node cleaner.js \"./dist\"",
    "build-mac": "electron-builder -m",
    "build-win": "electron-builder -w",
    "build-linux": "electron-builder -l",
    "build" : "electron-builder -mwl",	
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "dist": "yarn build && build --publish onTagOrDraft" 
  },
  "build": {
    "files": [
      "dist/",
      "node_modules/",
	  "assets/",
	  "index.js",
	  "about.html",
	  "package.json"
    ],
    "appId": "com.electron.vagrant-manager",
    "copyright": "Â© 2017 Absalom Media",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "title": "Vagrant Manager",  
      "icon": "build/icon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 355,
          "y": 125,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 155,
          "y": 125,
          "type": "file"
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "linux": {
      "icon": "build/icons/512x512.png",
      "category": "Development",
      "packageCategory": "Development",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/absalomedia/vagrant-manager"
  },
  "bugs": {
    "url": "https:/github.com/absalomedia/vagrant-manager/issues"
  },
  "homepage": "https:/github.com/absalomedia/vagrant-manager#readme",
  "keywords": [
    "Vagrant",
    "Manager"
  ],
  "author": "Lawrence Meckan",
  "contributors": [
    "Andrii Kostetskyi <kostyandrew@gmail.com>",
    "Vaibhav Sidapara <vaibhav.sidapara@gmail.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "electron-gh-releases": "^2.0.4",
    "electron-updater": "^2.16.2",
    "jquery": "^3.1.1",
    "shell-path": "^2.1.0",
    "shelljs": "^0.7.4"
  },
  "devDependencies": {
    "electron": "1.7.9",
    "electron-builder": "^19.45.4",
    "cross-env": "^5.1.0"
  }
}