{
  "name": "vagrant-manager",
  "productName": "Vagrant Manager",
  "companyName": "Absalom Media",
  "version": "2.0.3",
  "description": "Manage your vagrant machines in one place with Vagrant Manager",
  "scripts": {
    "start": "electron app",
    "dev": "NODE_ENV='development' electron app --enable-logging --remote-debugging-port=9222",
    "postinstall": "electron-builder install-app-deps",
    "pack-all": "build --dir -mwl --x64 --ia32",
    "dist-all": "build -mwl --x64 --ia32",
    "pack": "build --dir",
    "dist": "build --x64 --ia32",
    "test": "mocha test",
    "tdd": "mocha --watch test",
    "lint": "./node_modules/.bin/standard",
    "clean": "rm -rf dist",
    "clean:osx": "rm -rf dist/osx",
    "clean:win": "rm -rf dist/win"
  },
  "build": {
    "productName": "Vagrant Manager",
    "appId": "com.electron.vagrant-manager",
    "artifactName": "${name}-${arch}.${ext}",
    "copyright": "Â© 2018 Absalom Media",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "title": "Vagrant Manager",
      "icon": "build/icon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 355,
          "y": 125,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 155,
          "y": 125,
          "type": "file"
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "nsis-web",
        "7z",
        "zip",
        "appx"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "nsisWeb": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "icon": "build/icons/512x512.png",
      "category": "Development",
      "packageCategory": "Development",
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "freebsd",
        "pacman",
        "tar.xz"
      ]
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "it",
      "describe",
      "beforeEach",
      "afterEach",
      "Audio",
      "fetch",
      "Notification"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/absalomedia/vagrant-manager"
  },
  "bugs": {
    "url": "https:/github.com/absalomedia/vagrant-manager/issues"
  },
  "homepage": "https:/github.com/absalomedia/vagrant-manager#readme",
  "keywords": [
    "Vagrant",
    "Manager",
    "virtual",
    "docker",
    "virtualbox",
    "vmware"
  ],
  "author": "Lawrence Meckan <media@absalom.biz>",
  "contributors": [
    "Andrii Kostetskyi <kostyandrew@gmail.com>",
    "Vaibhav Sidapara <vaibhav.sidapara@gmail.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^2.21.8",
    "event": "^1.0.0",
    "heartbeats": "^5.0.1",
    "i18next": "^10.3.0",
    "i18next-node-fs-backend": "^1.0.0",
    "install-peers": "^1.0.2",
    "jquery": "^3.3.1",
    "node-fetch": "^2.1.2",
    "node-vagrant": "^1.3.2",
    "open": "^0.0.5",
    "shell-path": "^2.1.0",
    "shelljs": "^0.7.4"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "electron": "^1.8.1",
    "electron-builder": "^19.55.1",
    "mocha": "^4.0.1",
    "sinon": "^4.2.0",
    "spectron": "^3.7.2",
    "standard": "^10.0.3"
  }
}
