{
  "name": "vagrant-manager",
  "productName": "Vagrant Manager",
  "companyName": "Absalom Media",
  "version": "1.2.0",
  "description": "Manage your vagrant machines in one place with Vagrant Manager",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV='development' npm run start",
    "start": "electron index.js",
    "build-mac": "build -m",
    "build-win": "build -w",
    "build-linux": "build -l",		
    "server": "babel-node server.js",
    "build": "cross-env NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.production.js --progress --profile --colors",
    "package": "webpack --config webpack.config.production.js && electron-packager . vagrant-manager --all",
    "postinstall": "install-app-deps",
    "dist": "npm run build && build --publish onTagOrDraft"
  },
  "build": {
    "files": [
      "dist/",
      "node_modules/",
	  "assets/",
	  "index.js",
	  "about.html",
	  "package.json"
    ],
    "appId": "com.electron.vagrant-manager",
    "category": "public.app-category.developer-tools",
    "dmg": {
      "title": "Vagrant Manager",
      "icon": "build/icon.icns",
      "iconSize": 128,
      "prune": "true",
      "contents": [
        {
          "x": 355,
          "y": 125,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 155,
          "y": 125,
          "type": "file"
        }
      ]
    },
    "win": {
      "prune": "true",
      "icon": "build/icon.ico"
    },
    "linux": {
      "prune": "true",
      "icon": "build/icons/512x512.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "directories": {
    "output": "release"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/absalomedia/vagrant-manager"
  },
  "bugs": {
    "url": "https:/github.com/absalomedia/vagrant-manager/issues"
  },
  "homepage": "https:/github.com/absalomedia/vagrant-manager#readme",
  "keywords": [
    "Vagrant",
    "Manager"
  ],
  "author": "Lawrence Meckan",
  "contributors": [
    "Andrii Kostetskyi <kostyandrew@gmail.com>",
    "Vaibhav Sidapara <vaibhav.sidapara@gmail.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.11.4",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "jquery": "^3.1.1",
    "shell-path": "^2.1.0",
    "shelljs": "^0.7.4"
  },
  "devDependencies": {
    "electron": "^1.7.1",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.13.0",
    "babel-register": "^6.11.6",
    "cross-env": "^2.0.0",
    "css-loader": "^0.23.1",
    "debounce": "^1.0.0",
    "devtron": "^1.3.0",
    "electron-builder": "next",
    "electron-packager": "^7.5.1",
    "electron-prebuilt": "^1.3.2",
    "expect": "^1.20.2",
    "express": "^4.14.0",
    "file-loader": "^0.9.0",
    "json-loader": "^0.5.4",
    "mocha": "^3.0.2",
    "moment": "^2.14.0",
    "node-sass": "^3.8.0",
    "postcss-loader": "^0.9.1",
    "react": "^15.3.0",
    "react-addons-test-utils": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-hot-loader": "^1.3.0",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-saga": "^0.11.0",
    "sass-loader": "^4.0.0",
    "spectron": "^3.3.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.12.2",
    "webpack-target-electron-renderer": "^0.4.0"   
  }
}
